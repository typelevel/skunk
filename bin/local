#!/usr/bin/env bash

set -e

DIR=$1
EXTRA_FLAGS=$2

print_usage() {
  printf "\nUsage:\n \
    ./bin/local <stack_direction>\n
    Example:\n
      ./bin/local up \n
      ./bin/local down \n\n"
}

case $DIR in
  "up") CMD="up -d";;
  "down") CMD="down";;
  *)
    print_usage
    exit 1
  ;;
esac

# Fix postgres ssl key permissions.
chmod 640 world/server.key

docker-compose $CMD $EXTRA_FLAGS
